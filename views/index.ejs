<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head') %>
  <body style="background-color: #e5e7eb">
    <div class="d-flex justify-content-center">
      <div class="grid">
        <% for( let index = 0; index < messages.length; index++ ) { %>
        <div class="card">
          <div class="card-body">
            <h5 class="card-title mb-0"><%= messages[index].user %></h5>
            <small class="card-subtitle text-muted">
              <%= messages[index].added.toLocaleDateString() %>
            </small>
            <p><%= messages[index].text %></p>
          </div>
        </div>
        <% } %>
      </div>
    </div>
  </body>
</html>
