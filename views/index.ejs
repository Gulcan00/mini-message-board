<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head') %>
  <body style="background-color: #e5e7eb">
    <div class="d-flex justify-content-center">
      <div class="d-grid gap-3 mt-4">
        <div class="d-flex justify-content-between align-items-center gap-4">
          <h1 class="text-uppercase">Messages</h1>
          <a class="btn btn-primary ms-2" href="/new">New Message</a>
        </div>
        <div class="list-group">
          <% for( let index = 0; index < messages.length; index++ ) { %>
          <a
            href="<%= messages[index].id %>"
            class="list-group-item list-group-item-action"
          >
            <div class="d-flex w-100 justify-content-between">
              <h5 class="mb-1"><%= messages[index].username %></h5>
              <small class="text-muted"
                ><%= messages[index].added?.toLocaleDateString() %></small
              >
            </div>
            <p class="mb-1"><%= messages[index].text %></p>
          </a>
          <% } %>
        </div>
      </div>
    </div>
  </body>
</html>
